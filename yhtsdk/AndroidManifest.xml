<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.yunhetong.sdk" xmlns:android="http://schemas.android.com/apk/res/android"
>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
    >
        <activity
            android:name="com.yunhetong.sdk.fast.ContractDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.yunhetong.sdk.fast.ContractPreviewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.yunhetong.sdk.fast.SignDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity
            android:name="com.yunhetong.sdk.fast.SignGeneratorActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>